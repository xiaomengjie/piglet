<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.password.IncreasePasswordFragment">

    <EditText
        android:id="@+id/et_where_used"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/search_edit_text_background"
        android:inputType="text"
        android:hint="@string/where_password_is_used"
        android:layout_margin="8dp"
        android:padding="8dp" />

    <EditText
        android:id="@+id/et_password_length"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_where_used"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/search_edit_text_background"
        android:inputType="number"
        android:hint="@string/what_is_password_length"
        android:layout_margin="8dp"
        android:padding="8dp" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password_length"
        android:layout_marginTop="40dp"
        android:background="@drawable/confirm_button_background"
        android:text="@string/confirm"
        android:textSize="16sp"
        app:layout_constraintWidth_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>